<div class="container">
	<div class="row"> 
		<div class="col-md-3">
			<image ng-src="{{FB_SinglePost.picture}}" >
		</div> 
		<div class="col-md-9">
			{{FB_SinglePost.message}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row"> 
		<div class="col-md-7">
			<span ng-repeat="word in filter_words">
				<span ng-click="remove_word(word)" class="btn btn-warning">{{word}}</span>
			</span>
		</div> 
		<div class="col-md-5">
			Word: <input type="text" ng-model="page_name" id="addword" value="ShakeysPH" > <button ng-click="add_word()" class="btn btn-primary">Add Filter Word</button>
		</div>
	</div>
</div>


<div class="container">
	<div class="row"> 
		<div class="col-md-7">
			<table class="table table-hover table-striped">
				<thead>
					Comments
				</thead>
				<thead>
					<th>FROM</th>
					<th>Comment</th>
					<th>Created Time</th>
					<th>Number of Replies</th>
					<th>Replies</th>
				</thead>
				<tbody>
					<tr ng-repeat="comment in FB_ShowComments">
						<td>
							<image src="{{comment.from.picture.data.url}}" >
							<div>{{comment.from.name}}</div>
						</td>
						<td>
							{{comment.message}}
						</td>
						<td>
							{{comment.created_time}}
						</td>
						<td>
							{{comment.comments.summary.total_count}}
						</td>
						<td>
							<button ng-click="show_replies($index)">Show Replies</button>
							<button ng-click="reply_to_comment($index)">Reply</button>
						</td>
					</tr>
					
				</tbody>
			</table>
		</div>
		<div class="col-md-5" ng-show="showReplies">
			<table class="table table-hover table-striped">
				<tr>
					<td>
						FROM
					</td>
					<td>
						Reply
					</td>
				<tr>
				<tr ng-repeat="reply in commentReply">
					<td>
						<image src="{{reply.from.picture.data.url}}" >{{reply.from.name}}
					</td>
					<td>
						{{reply.message}}
					</td>
				</tr>
			</table>
		</div>
	</div>
</div>

