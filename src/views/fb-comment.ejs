<table class="table table-hover table-striped">
	<thead>
		<th>FROM</th>
		<th>Comment</th>
		<th>Replies</th>
	</thead>
	<tbody>
		<span ng-repeat="comment in FB_Comments">
			<tr>
				<td>
					<image src="{{comment.from.picture.data.url}}" >{{comment.from.name}}
				</td>
				<td>
					{{comment.message}}
				</td>
				<td>
					<table class="table table-hover table-striped">
						<tr>
							<td>
								FROM
							</td>
							<td>
								Reply
							</td>
						<tr>
						<tr ng-repeat="reply in comment.comments.data">
							<td>
								<image src="{{reply.from.picture.data.url}}" >{{reply.from.name}}
							</td>
							<td>
								{{reply.message}}
							</td>
						</tr>
					</table
				</td>
			</tr>
			<tr>
				<td>asdasd</td>
			</tr>
		</span>
	</tbody>
</table>