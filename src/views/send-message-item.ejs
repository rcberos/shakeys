<% include ./partials/header %>
<% include ./partials/navigation %>


<div class="container">
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<h3>Send message to the sites</h3><br/>
				<textarea rows="5" class="form-control" id="text-message" placeholder="Type your message here..."></textarea>	
			</div>
			<div class="form-group">
				<button class="btn btn-primary" onclick="sendMessage()">Send Message</button>
			</div>
			<div class="form-group">
				<ol class="site-to-send-message" type="1"></ol>
			</div>
		</div>
		<div class="col-md-6">
			<div class="inner-addon right-addon">
			    <i class="glyphicon glyphicon-search icon-search" ></i>
			    <input type="text" class="form-control input-lg"  id="search" placeholder="Search..." />
			</div><br/>
			<div class="site_preview site_preview2">
				<table class="table table-hover table-striped table-bordered" id="table-contacts">
				<tr>
					<th>Site Name</th>
					<th>Number</th>
					<th>Contact Person</th>
				</tr>
				<% site_data.forEach(function(item){ %>
					<tr>
						<td><input type="checkbox" class="number-to-send" data-name="<%= item.Room %>" data-number="<%= item.MobileNumber %>" onchange="checkboxAddToNUmberList(this)"> <%= item.Room %></td>
						<td><%= item.ContactPersonName %></td>
						<td><a href="tel:+63<%= item.MobileNumber %>">0<%= item.MobileNumber %></a></td>
					</tr>
				 <% }) %>
				</table>
			</div>
			<h4>We currently have: <span class="badge"><%= site_data.length %></span> site partners <small>(with contact number in the database)</small></h4>
		</div>
	</div>
</div>


<% include ./partials/footer %>