<div class="comment_head">
	Replies
</div>
<table class="table table-hover table-striped">
	<thead>
		<th>FROM</th>
		<th>Reply</th>
	</thead>
	<tr ng-repeat="reply in commentReply">
		<td>
			<image src="{{reply.from.picture.data.url}}" >
			<div>
				{{reply.from.name}}
			</div>
		</td>
		<td>
			{{reply.message}}
		</td>
	</tr>
</table>
<div class="row"> 
	<div class="col-sm-3">
		<image ng-src="{{FB_Picture}}" >
	</div> 
	<div class="col-sm-7">
		<input type="text">
	</div>
	<div class="col-sm-2">
		<button>Send</button>
	</div>
</div>