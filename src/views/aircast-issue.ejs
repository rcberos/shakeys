<% include ./partials/header %>
<% include ./partials/navigation %>

	<div class="container">
		<h1 class="margin-bottom-20 margin-top-0"><a class="glyphicon glyphicon-plus add" id="add-aircast-issue"></a> Aircast Issue Tracker</h1>
		<div class="row">
			<div class="col-md-6">
				<div class="inner-addon right-addon">
					<i class="glyphicon glyphicon-search icon-search" ></i>
				    <input type="text" class="form-control input-lg"  id="search" placeholder="Search..." />
				</div>
			</div>
			<div class="col-md-6">
				<button class="btn btn-success">SAVE</button>
				<button class="btn btn-primary">EDIT</button>
			</div>
		</div>
		<div class="row">
			<table class="table table-hover table-striped margin-top-30" id="table-aircast-issue">
				<th>Date Detected</th>
				<th>Site Name</th>
				<th>Issue</th>
				<th>Resolution</th>
				<th>Status</th>
				<th>Remarks</th>
				<th>Date of Resolution</th>
			</table>
		</div>
	</div>

	<script type="text/javascript">
		$("#add-aircast-issue").on('click',function(){
			$("#table-aircast-issue").append('<tr><td><input type="text" class="form-control"></td><td><input type="text" class="form-control radius-0 "></td><td><input type="text" class="form-control radius-0 "></td><td><input type="text" class="form-control radius-0 "></td><td><input type="text" class="form-control radius-0 "></td><td><input type="text" class="form-control radius-0 "></td><td><input type="text" class="form-control radius-0 "></td></tr>');
		});
	</script>

